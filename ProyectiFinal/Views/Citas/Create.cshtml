@model ProyectiFinal.Models.Cita

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">Cortes</h2>
<p></p>

<div id="carouselExampleIndicators" class="carousel slide align-items-center" data-ride="carousel">
    <div class="carousel-inner align-items-center">
        <div class="carousel-item active align-items-center">
            <img class="d-block w-20 align-items-center" src="~/Content/Img/ManBun.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/MessyPomp.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/PeakyBlind.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/Pompadour.png" alt="Forth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-20" src="~/Content/Img/SkinFade.png" alt="Five slide">
        </div>
        <div class="carousel-item text-center">
            <img class="d-block w-20" src="~/Content/Img/SlickBack.png" alt="Six slide">
        </div>
