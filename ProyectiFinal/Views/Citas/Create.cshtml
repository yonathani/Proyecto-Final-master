<hr />

<h2 class="text-center">Barberos</h2>
<p></p>
<div>
    <div class="row">
        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>NovaFeroz</h3>
                <img class="card-img-top" src="~/Content/Img/barbero1.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 3 año</h5>
                <p class="card-text">Buen trato especialista en corte para niños y buena gente.</p>
            </div>
        </div>

        <hr />

        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>Danielito</h3>
                <img class="card-img-top" src="~/Content/Img/barbero2.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 5 años</h5>
                <p class="card-text">Especialista en cualquier corte y diseño de cabello.</p>
            </div>
        </div>

        <hr />

        <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
            <div class="card-header">
                <h3>Trix</h3>
                <img class="card-img-top" src="~/Content/Img/barbero3.jpg" alt="Card image cap">
            </div>
            <div class="card-body">
                <h5 class="card-title">Experiencia: 1 año</h5>
                <p class="card-text">Buen trato con las personas muy alegre especialista en los fade y coloracion de cabello.</p>
            </div>
        </div>
    </div>
</div>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cita</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Nombre del cliente</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Telefono</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Dia de la Cita</label>
            <div class="col-md-10">
                <input type="date" id="start" name="trip-start" min="2020-01-01" max="2020-12-31">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Hora de la Cita</label>
            <div class="col-md-10">
                <input type="time" id="starttime" name="trip-time" min="07:00" max="22:00">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Barbero</label>
            <div class="col-md-10">
                @Html.DropDownList("BarberId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BarberId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Corte a Realizar</label>
            <div class="col-md-10">
                @Html.DropDownList("CorteId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CorteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
